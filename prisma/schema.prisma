// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  
  // Credenciais WhatsApp Business API
  whatsappPhoneNumberId String?
  whatsappToken         String?
  whatsappBusinessId    String?
  whatsappAppId         String?   // ID do App (Meta)
  whatsappAppSecret     String?   // Segredo do App (para validação de assinatura)
  whatsappVerifyToken   String?   // Token de verificação do Webhook
  
  // Template configurado
  templateName          String?   @default("paymentswa")
  templateLanguage      String?   @default("pt_BR")
  
  // Logo/Imagem padrão para cobranças
  defaultImageUrl       String?
  
  // Configurações de Gateway
  pixKey                String?
  pixKeyType            String?   // EVP, CPF, CNPJ, EMAIL, PHONE
  merchantName          String?
  
  // Mercado Pago (para link de pagamento)
  mercadoPagoToken      String?
  mercadoPagoPublicKey  String?
  
  createdAt     DateTime  @default(now())
  charges       Charge[]
  apiLogs       ApiLog[]
  contacts      Contact[]
}

model Charge {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Dados do cliente
  customerName    String
  customerPhone   String   // Formato: 5585999999999
  customerEmail   String?
  
  // Dados da cobrança
  amount          Float
  description     String
  productName     String
  dueDate         DateTime?
  
  // Imagem do produto/serviço
  imageUrl        String?
  
  // Agendamento
  scheduleType    String
  scheduleDay     Int?          // Dia do mês (1-31) para cobranças recorrentes
  nextSendDate    DateTime?
  
  // Status
  status          String  @default("PENDING")
  sentAt          DateTime?
  paidAt          DateTime?
  
  // Gateway
  pixReferenceId      String?   // ID da transação PIX
  pixQrCode           String?   // QR Code PIX
  mercadoPagoLink     String?   // Link de pagamento cartão
  
  // WhatsApp
  whatsappMessageId   String?
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model ApiLog {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  chargeId    String?
  endpoint    String
  method      String
  statusCode  Int?
  request     String?
  response    String?
  error       String?
  
  createdAt   DateTime @default(now())
}

model Contact {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  phone           String    // 558599999999
  name            String?
  profilePicUrl   String?
  
  lastMessageAt   DateTime  @default(now())
  
  messages        Message[]
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([userId, phone])
}

model Message {
  id              String    @id @default(cuid())
  contactId       String
  contact         Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
  
  content         String
  type            String    @default("text") // text, image, template, reaction
  direction       String    // INBOUND (received), OUTBOUND (sent)
  status          String    @default("SENT") // SENT, DELIVERED, READ, FAILED
  
  whatsappId      String?   @unique // ID da mensagem no WhatsApp (wamid)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}


model WebhookLog {
  id        String   @id @default(cuid())
  provider  String   @default("whatsapp")
  payload   Json
  status    String   // PROCESSED, ERROR
  error     String?
  createdAt DateTime @default(now())
}
